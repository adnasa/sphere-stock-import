{
    "title": "sphere-stock-xml-import",
    "description": "Creates or updates your SPHERE.IO inventory from XML",
    "url" : "http://www.commercetools.com",
    "credentials": {
        "fields": {
            "projectKey": {
                "viewClass": "TextFieldView",
                "label": "Project Key",
                "required": true,
                "placeholder": "Paste your project key"
            },
            "clientId": {
                "viewClass": "TextFieldView",
                "label": "Client Id",
                "required": true,
                "placeholder": "Paste your Client Id"
            },
            "clientSecret": {
                "viewClass": "TextFieldView",
                "label": "Client Secret",
                "required": true,
                "placeholder": "Paste your Client Secret"
            }
        }
    },
    "actions": {
        "services": {
            "main": "elasticio.js",
            "title": "Stock XML Import",
            "metadata": {
                "in": {
                    "type" : "object",
                    "properties" : {
                        "SKU" : {
                            "title" : "SKU of product",
                            "type" : "string",
                            "required": true
                        },
                        "QUANTITY" : {
                            "title" : "Quantity on stock of product",
                            "type" : "number",
                            "required": true
                        }
                    }
                }
            }
        }
    }
}