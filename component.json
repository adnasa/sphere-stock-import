{
    "title": "sphere-stock-xml-import",
    "description": "Import your stock information from XML or CSV into your SPHERE.IO project.",
    "url" : "http://www.commercetools.com",
    "credentials": {
        "fields": {
            "sphereProjectKey": {
                "viewClass": "TextFieldView",
                "label": "Project Key",
                "required": true,
                "placeholder": "Paste your SPHERE.IO project key here"
            },
            "sphereClientId": {
                "viewClass": "TextFieldView",
                "label": "Client Id",
                "required": true,
                "placeholder": "Paste your SPHERE.IO client id here"
            },
            "sphereClientSecret": {
                "viewClass": "TextFieldView",
                "label": "Client Secret",
                "required": true,
                "placeholder": "Paste your your SPHERE.IO client secret here"
            }
        }
    },
    "actions": {
        "csvMappingImport": {
            "main": "elasticio.js",
            "title": "CSV Import via CSV Mapping",
            "metadata": {
                "in": {
                    "type" : "object",
                    "properties" : {
                        "SKU" : {
                            "title" : "SKU of product",
                            "type" : "string",
                            "required": true
                        },
                        "QUANTITY" : {
                            "title" : "Quantity of product",
                            "type" : "number",
                            "required": true
                        },
                        "EXPECTED_DELIVERY" : {
                            "title" : "Expected delivery date",
                            "type" : "string",
                            "required": false
                        },
                        "CHANNEL_ID" : {
                            "title" : "SPHERE.IO channel id",
                            "type" : "string",
                            "required": false
                        },
                        "CHANNEL_KEY" : {
                            "title" : "Channel key",
                            "type" : "string",
                            "required": false
                        }
                    }
                }
            }
        },
        "csvFileImport": {
            "main": "elasticio.js",
            "title": "CSV File Import"
        },
        "xmlFileImport": {
            "main": "elasticio.js",
            "title": "XML File Import"
        }
    }
}
